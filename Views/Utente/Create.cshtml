@model EsercizioSettimana11Marzo.Models.Utente


<div class="d-flex flex-column align-items-center ">


    <h2>Registrati</h2>

    <div class="d-flex justify-content-center bg-light bg-opacity-25 px-4 py-5 mt-2 rounded-3">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control quantitaForm ", style = "width:15em" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control quantitaForm" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="d-flex justify-content-center" >
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 mt-3">
                            <input type="submit" value="Registrati" class="btn btn-outline-light" />
                        </div>
                    </div>
                </div>
                
            </div>
        }
    </div>
</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

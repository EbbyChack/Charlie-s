@model EsercizioSettimana11Marzo.Models.Articolo

<div class="d-flex flex-column align-items-center ">
    <h2>Modifica articolo</h2>
    <div class="d-flex justify-content-center bg-light bg-opacity-25 px-4 py-5 mt-2 rounded-3">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdArticolo)

                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control quantitaForm", style = "width:19em" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Immagine, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Immagine, new { htmlAttributes = new { @class = "form-control quantitaForm" } })
                        @Html.ValidationMessageFor(model => model.Immagine, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control quantitaForm" } })
                        @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TempiDiConsegna, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.TempiDiConsegna, new { htmlAttributes = new { @class = "form-control quantitaForm" } })
                        @Html.ValidationMessageFor(model => model.TempiDiConsegna, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Ingredienti, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Ingredienti, new { htmlAttributes = new { @class = "form-control quantitaForm" } })
                        @Html.ValidationMessageFor(model => model.Ingredienti, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12 mt-3">
                            <input type="submit" value="Modifica" class="btn btn-outline-light" />
                        </div>
                    </div>
                </div>
               
            </div>
        }
    </div>

   
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

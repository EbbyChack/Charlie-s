@model IEnumerable<EsercizioSettimana11Marzo.Models.Articolo>


<h2>Modifica articoli</h2>

<p class="text-end">
    @Html.ActionLink("Aggiungi", "Create",null, new { @class = "btn btn-outline-light"} )
</p>

<div class="container">
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="card Custom border border-0">
                    
                    <img class="card-img " src="~/Images/@item.Immagine" alt="@item.IdArticolo" style=" height:25em; object-fit:cover">
                    <div class="card-img-overlay align-bottom">
                        <h5 class="card-title text-white bg-dark bg-opacity-50 d-inline px-2 py-1 rounded-pill  ">@item.Nome</h5>

                        <div class="hoverCard card-body my-3 text-white bg-dark bg-opacity-75 px-2 py-3 rounded-3 d-flex flex-column justify-content-center align-items-center">
                            <div>
                                <b>Prezzo: </b> <p>@item.Prezzo €</p>
                                <b>Ingredienti: </b> <p> @item.Ingredienti</p>
                                <b>Tempi di consegna: </b><p> @item.TempiDiConsegna minuti</p>
                            </div>
                            <div class="">
                                <a href="@Url.Action("Edit", new { id = item.IdArticolo })" class="btn btn-outline-light">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Details", new { id = item.IdArticolo })" class="btn btn-outline-light">
                                    <i class="fa fa-info-circle"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.IdArticolo })" class="btn btn-outline-light">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </div>



                    </div>

                </div>



            </div>
        }

    </div>
</div>
